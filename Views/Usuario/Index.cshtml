@model IEnumerable<Canchas4.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3>Usuarios</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary" form-control>Crear un nuevo usuario</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>Id Usuario</th>
                <th>Nombre de usaurio</th>
                <th>Apellido</th>
                <th>Apellido</th>
                <th>Dirección</th>
                <th>Correo electronico</th>
                <th>Celular</th>
                <th>Opciones</th>
                <th></th>
            </tr>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.UsuarioId</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.ApellidoPaterno</td>
                    <td>@usuario.ApellidoMaterno</td>
                    <td>@usuario.Direccion</td>
                    <td>@usuario.Coreo</td>
                    <td>@usuario.Celular</td>
                    <td>
                        <a class="btn btn-primary text-write" asp-action="Editar" asp-route-id="UsuarioId.">Editar </a>
                        <a class="btn btn-danger text-write" asp-action="Eliminar" asp-route-id="UsuarioId.">Eliminar </a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Usuarios registrados</p>
    }
</div>